{
  "name": "node-divoom-timebox-evo",
  "version": "0.0.1",
  "description": "A module to generate and decode messages from a Divoom Timebox Evo",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "pre-commit": [
    "pre-commit"
  ],
  "scripts": {
    "pre-commit": "npm run test && npm run build && npm run doc && git add .",
    "doc": "typedoc",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register test/**/*.spec.ts",
    "testWithCoverage": "nyc -r lcov -e .ts -x \"test/**/*.spec.ts\" mocha -r ts-node/register test/**/*.spec.ts && nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RomRider/divoom-timebox-evo.git"
  },
  "keywords": [
    "divoom",
    "npm",
    "node",
    "module",
    "timebox"
  ],
  "author": "Jérôme Wiedemann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RomRider/divoom-timebox-evo/issues"
  },
  "homepage": "https://github.com/RomRider/divoom-timebox-evo#readme",
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.7",
    "@types/rewire": "^2.5.28",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "precommit": "^1.2.2",
    "rewire": "^4.0.1",
    "rollup": "^1.20.3",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-node": "^8.3.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.5.3",
    "@types/node": "^12.7.3",
    "file-type": "^12.2.0",
    "gifwrap": "^0.9.2",
    "jimp": "^0.6.4"
  }
}
